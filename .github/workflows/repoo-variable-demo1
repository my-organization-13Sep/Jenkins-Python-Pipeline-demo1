name: Build Python workflow- repository variables
on:
  push:
jobs:
  job1:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      - name: Setup Python
        env:
          VERSION: ${{ vars.PYTHON_VERSION }}  #VERSION = 3.9 # repo variable
        uses: actions/setup-python@v5
        with:
          python-version: $VERSION  # step variable
      - name: Install dependencies
        run: |
          pip install --upgrade pip
          pip install -r requirements.txt
      - name: Set PYTHONPATH
        run: echo "PYTHONPATH=$GITHUB_WORKSPACE" >> $GITHUB_ENV
      - name: Run tests
        env:
          mycmd: ${{ vars.PYTHONCMD }}  # step variable & repository variable
        run: $mycmd
